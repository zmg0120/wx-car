.container {
  background: #eee;
  position: relative;
  height: auto;
}
.title {
  font-size: 20px;
  font-weight: bold;
  position: absolute;
  top: 80rpx;
}
image {
  width: 750rpx;
}
.{
  position: absolute;
  top: 0rpx;
}
input {
  border: 1px solid #aaa;
  width: 730rpx;
  height: 80rpx;
  margin-top: 30rpx;
}

button{
  color: #fff;
  background-color: #000;
  margin-top: 100rpx;
  margin-bottom: -100rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0rpx;
}
.bottom {
  background: #ccc;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #888;
